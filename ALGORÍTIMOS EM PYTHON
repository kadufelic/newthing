def bubble_sort(arr):
    n = len(arr)
    if n <= 1:
        return arr
    
    def bubble_pass(arr):
        swapped = False
        for i in range(n-1):
            if arr[i] > arr[i+1]:
                arr[i], arr[i+1] = arr[i+1], arr[i]
                swapped = True
        return swapped
    
    while bubble_pass(arr):
        pass
    
    return arr

arr = [64, 34, 25, 12, 22, 11, 90]
sorted_arr = bubble_sort(arr)
print("Array ordenado:", sorted_arr)

